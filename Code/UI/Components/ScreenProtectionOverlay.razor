@namespace Facepunch.UI
@attribute [StyleSheet]

<root>
    <div @ref="Overlay" class="overlay mask-scope" />
</root>

@code
{
    public Panel Overlay { get; set; }

    float GetOpacity()
    {
        if ( !GameUtils.Viewer.IsValid() )
            return 0f;

        if ( !GameUtils.Viewer.Pawn.IsValid() )
            return 0f;

        if ( !GameUtils.Viewer.Pawn.HealthComponent.IsValid() )
            return 0f;

        if ( GameUtils.Viewer.Pawn.HealthComponent.IsGodMode ) 
            return 1f;

        return 0f;
    }

    public override void Tick()
    {
        if ( Overlay.IsValid() )
        {
            Overlay.Style.Opacity = GetOpacity();
        }
    }
}