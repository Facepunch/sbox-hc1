@inherits BaseMarkerPanel
@namespace Facepunch.UI

@if ( !Player.IsValid() ) return;

<style>
    PlayerMarkerPanel
    {
        justify-content: flex-end;
        align-items: center;
        flex-direction: column-reverse;
        text-shadow: 1px 1px 1px rgba( black, 1 );
        transform: translateY(-100%);
       
        .dot
        {
            width: 6px;
            height: 6px;
            border-radius: 100px;
            background-color: @Player.TeamComponent.Team.GetColor().Hex;
            box-shadow: 2px 2px 2px rgba( black, 0.5 );
        }

        .name
        {
            text-shadow: 1px 1px 1px rgba( black, 1 );
            font-weight: 900;
            color: @Player.TeamComponent.Team.GetColor().Hex;
        }

        .hp
        {
            text-shadow: 1px 1px 1px rgba( black, 1 );
            color: @Player.TeamComponent.Team.GetColor().Hex;
        }

        .weapons
        {
            label
            {
                text-shadow: 1px 1px 1px rgba( black, 1 );
            }
            gap: -8px;

            height: 48px;

            .icon {
                width: 64px;
                height: 64px;
            }
        }

        Icon {
            background-image-tint: @Player.TeamComponent.Team.GetColor().Hex;
        }
    }
</style>

<root>
    @if ( !LocalPlayer.IsValid() )
        return;

    @if ( Player == LocalPlayer )
        return;

    @if ( !Marker.IsValid() ) return;

    @if ( Marker.IsBehind ) 
        return;

    @if ( Player?.HealthComponent?.State != LifeState.Alive )
        return;

    @if ( !LocalPlayer.IsSpectating )
    {
        @* TODO: make the player markers show up for enemies under certain circumstances
        when aiming at a player that's kinda close to you? *@
        @if ( Viewer.IsValid() && !Viewer.GameObject.IsFriendly(Player.GameObject) )
            return;
    }


    @if ( Marker.IsOffScreen )
    {
        //
    }
    else
    {
        <div class="dot" />
        <label class="name">@(Player.HealthComponent.Health.ToString( "0" ))%</label>
        <label class="name">@Player.GetPlayerName()</label>
        <div class="weapons row">
            @foreach (var wpn in Player.Inventory.Weapons.Where( CanShowWeapon ).OrderBy( x => x.Resource.Slot ) )
            {
                <img class="icon" src="@wpn.Resource.Icon"/>
            }
        </div>

        @if( Player.Inventory.HasBomb && Player.IsFriendly( GameUtils.LocalPlayer ) )
        {
            <Icon File="/ui/bomb.png" size="24"></Icon>
        }
    }
</root>

@code
{
    public PlayerController Player => Object?.GameObject?.Components?.Get<PlayerController>();
    private PlayerController Viewer => GameUtils.Viewer;
    private PlayerController LocalPlayer => GameUtils.LocalPlayer;

    private bool CanShowWeapon( Weapon weapon )
    {
        if ( weapon.Resource.Slot == WeaponSlot.Melee ) return false;
        if ( weapon.Resource.Slot == WeaponSlot.Special ) return false;
        return true;
    }

    protected override int BuildHash()
    {
        return System.HashCode.Combine( Time.Now );
    }
}
